        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Inventori"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".Activity.Report.ReportDetail"
            android:exported="false"
            android:parentActivityName=".Activity.Report.InventReport"/>
        <activity
            android:name=".Activity.Menu.KomposisiEdit"
            android:exported="false" />
        <activity
            android:name=".Activity.User.RegisterActivity"
            android:exported="false" />
        <activity
            android:name=".Activity.User.LoginActivity"
            android:exported="false" />
        <activity
            android:name=".Activity.Usage.UsageKomposisiDetail"
            android:exported="false"
            android:parentActivityName=".Activity.Usage.InventUsage" />
        <activity
            android:name=".Activity.Stock.AddStock"
            android:exported="false" />
        <activity
            android:name=".Activity.Stock.InventorySetDetail"
            android:exported="false"
            android:parentActivityName=".Activity.Stock.InventorySet" />
        <activity
            android:name=".Activity.Menu.KomposisiSet"
            android:exported="false" />
        <activity
            android:name=".Activity.Menu.MenuSetDetail"
            android:exported="false"
            android:parentActivityName=".Activity.Menu.MenuSet" />
        <activity
            android:name=".Activity.Menu.AddMenu"
            android:exported="false"
            android:parentActivityName=".Activity.Menu.MenuSet" />
        <activity
            android:name=".Activity.Report.InventReport"
            android:exported="false"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".Activity.Forecast.InventForecast"
            android:exported="false"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".Activity.Restock.InventRestock"
            android:exported="false"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".Activity.Usage.InventUsage"
            android:exported="false"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".Activity.Menu.MenuSet"
            android:exported="false"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".Activity.Stock.InventorySet"
            android:exported="false"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>